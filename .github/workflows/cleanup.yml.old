name: cleanup
on:
  schedule:
    - cron: '0 0 * * *' # Runs daily at midnight
  workflow_dispatch:

jobs:
  # 1. Clean old images from GHCR
  delete-old-images:
    runs-on: ubuntu-latest
    permissions:
      packages: write
    strategy:
      fail-fast: false
      matrix:
        image-name: [kinoite-amd, kinoite-nvidia]
    steps:
      - name: Delete old package versions
        uses: actions/delete-package-versions@v5
        with:
          package-name: ${{ matrix.image-name }}
          package-type: 'container'
          # Keep last 7 versions for safe rollbacks (rpm-ostree rollback)
          min-versions-to-keep: 7
          delete-only-untagged-versions: 'true'

  # 2. Clean old workflow run logs
  delete-old-runs:
    runs-on: ubuntu-latest
    permissions:
      actions: write
    steps:
      - name: Delete workflow runs
        uses: Mattraks/delete-workflow-runs@v2
        with:
          token: ${{ github.token }}
          repository: ${{ github.repository }}
          retain_days: 3 # Increased from 1 to 3 for better debugging window
          keep_minimum_runs: 5 # Always keep the last 5 runs per workflow